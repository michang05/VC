			android:layout_width="wrap_content" android:id="@+id/textView2"
			android:gravity="center_horizontal" android:layout_height="wrap_content"></TextView>
	</TableRow>
	<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ToggleButton android:layout_width="wrap_content" android:id="@+id/button1"
			android:text="Button" android:layout_height="wrap_content"
			android:layout_weight="1"></ToggleButton>
		<ToggleButton android:text="Button" android:id="@+id/button2"
