<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
	android:id="@+id/betslip" android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:app="http://schemas.android.com/apk/res/mobi.victorchandler"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/head_background">

	<mobi.victorchandler.view.ActionBar
		android:id="@+id/actionbar" style="@style/ActionBar" />

	<LinearLayout android:background="@drawable/head_background"
		android:layout_height="fill_parent" android:layout_width="match_parent"
		android:orientation="vertical">
		<ListView android:id="@android:id/list" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:background="@drawable/list_item_background" />

		<TextView android:text="Favorites is Empty" android:id="@+id/android:empty"
			android:layout_width="fill_parent" android:layout_height="match_parent"
			android:gravity="center" android:textColor="@android:color/white"
			android:textSize="30sp" />

	</LinearLayout>
</LinearLayout>